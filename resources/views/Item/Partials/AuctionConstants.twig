{% set bidderListLast = auction.bidderList | last %}
{#{% set bidderListLength = auction.bidderList | length %}#}


<div class="m-t-2">
    <dt><span class="alarm">Aufgeld</span> <span class="small">(10%)</span>:</dt>
    <dd><span class="alarm"><strong>{{ ( bidderListLast.bidPrice * 0.1 ) | formatMonetary('EUR') }}</strong></span>
        <span class="m-x-1">|</span>
        <span>Gesamtpreis: </span>
        <span class="alarm"><strong>{{ ( bidderListLast.bidPrice + bidderListLast.bidPrice * 0.1 ) | formatMonetary('EUR') }}</strong></span>
    </dd>
    <dt>Start Datum:</dt>
    <dd>{{ auction.startDate | date('D d. M Y H:i') }}</dd>
    <dt>Dauer:</dt>
    <dd>{{ auction.auctionDuration }} Tage</dd>
    <dt>End Datum:</dt>
    <dd>{{ auction.expiryDate | date('D d. M Y H:i e') }}</dd>
    <dt>Versand:</dt>
    <dd>Innerhalb Deutschlands kostenlos.</dd>

</div>