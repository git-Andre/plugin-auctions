<script type="x/template" id="vue-auction-show-bidderlist">


    <auction-countdown
            template="#vue-auction-countdown"
            deadline="{{ auction.expiryDate }}" number
    >
    </auction-countdown>

    {% include category_template(shippingCat, lang, services.webstoreConfig.getWebstoreConfig().webstoreId) ignore missing %}

    <div class="tab-pane" id="assessments-details" role="tabpanel">

        <div class="m-y-2">
            <table class="table table-striped table-hover table-sm">
                <tbody>
                <tr>
                    <th class="column p-l-3"><i class="fa fa-user fa-2" aria-hidden="true"></i><h4>Bieter</h4></th>
                    <th class="column text-right p-r-3"><i class="fa fa-money fa-2" aria-hidden="true"><h4>Gebots-Preis</h4></th>
                    <th class="column text-right p-r-3"><h4><i class="fa fa-calendar-times-o" aria-hidden="true">Gebots-Zeitpunkt</h4></th>
                </tr>
                <tr v-for="bid in bidderList">
                    <td class="bid p-l-3">${ bid.bidderName }</td>
                    <td class="bid text-right p-r-3">${ bid.bidPrice | currency }</td>
                    <td class="bid text-right p-r-3">${ bid.bidTimeStamp | date "LLLL" }</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

</script>


<style>
    .bid {
        font-family: 'Abel', sans-serif;
    }
    .column {
        width: 33%;
    }
</style>