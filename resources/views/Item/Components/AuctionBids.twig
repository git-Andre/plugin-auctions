<script type="x/template" id="vue-auction-bids">
    
    
    {#<h3>${ auction.expiryDate }</h3>#}
    <auction-countdown
            template="#vue-auction-countdown"
            :deadline="deadline"
    >
    </auction-countdown>
    
    
    <div class="row container" id="auction-bidform">
        
        <div class="col-lg-8 offset-lg-3" formGroup="maxBidForm">
            <input class="form-control form-control-lg text-muted"
                    v-model="maxCustomerBid" number
                    min="${ minbid }"
                    type="number"
                    id="maximumBid"
                    placeholder="{{ trans("PluginAuctions::Template.maxBid") }}"
                    aria-describedby="maxBidHelpBlock"
            >
            <p id="maxBidHelpBlock"
                    class="form-text text-muted text-center">{{ trans("PluginAuctions::Template.bidAtLeast") }}<span
                        :class="{alarm: !isInputValid}">${ minbid | currency }</span>{{ trans("PluginAuctions::Template.bidAtLeastEnd") }}
            </p>
            
            <button class="btn btn-primary btn-lg btn-block"
                    @click="confirmBid"
                    :disabled="!isInputValid"
                    {#:disabled="!isInputValid and ${isChecked}"#}
            >
                <i class="fa fa-check-square-o p-r-1" aria-hidden="true"></i>{{ trans("PluginAuctions::Template.makeBid") }}
            </button>
    
            {#<button class="btn btn-primary btn-lg btn-block"#}
            {#type="submit"#}
            {#@click="addBidTest"#}
            {#>{{ trans("PluginAuctions::Template.makeBindingBid") }}</button>#}

        </div>
    </div>

</script>
