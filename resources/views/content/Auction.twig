<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>To Do</title>

    <!-- Link main CSS file and additional fonts -->
    <link href="{{ plugin_path('PluginAuctions') }}/css/main.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC" rel="stylesheet">


    <!-- Integrate jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>

</head>

<body>
    <!-- Auction list -->
    <div class="list">
        <h1 class="header">Helper</h1>

        <ul class="tasks">
            {% if auctions is not null %}
                {% for auction in auctions %}
                    <li>
                        <span>{{ auction.id }}, </span>
                        <span>{{ auction.itemId }}, </span>
                        <span>{{ auction.createdAt }}</span>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>

        <!-- Text field and submit button -->
        <div class="task-add">
            <input type="number" name="itemId" placeholder="Enter a Item ID here." class="input" autocomplete="off">
            <input type="submit" id="addTask" value="Add" class="submit">
        </div>
    </div>

    <!-- Enable adding, updating and deleting auctions in the To Do list without reloading the page -->
    <script src="{{ plugin_path('PluginAuctions') }}/js/auction.js"></script>
</body>
</html>
